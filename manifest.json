{
	"manifest_version": 2,
	"name": "CrunchyRoll Episode Tracker",
	"version": "1.0",
	"description": "Tracks episodes that have been viewed on CrunchyRoll",
	"background" : {
    "scripts": ["background.js"],
    "persistent": false
  },
	"page_action":{
		"default_icon": "images/icon128.png",
		"default_popup": "popup.html"},
	"icons": {"128": "images/icon128.png"},
	"permissions": ["https://www.crunchyroll.com/*","history","declarativeContent"]

}
